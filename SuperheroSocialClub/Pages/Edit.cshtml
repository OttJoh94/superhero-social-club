@page
@model SuperheroSocialClub.Pages.EditModel
@{
}

@* Bara en placeholder *@

<div class="container">
    <h1 class="text-center">Here you can edit your superhero</h1>

    <form method="post" class="mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">               
                <div class="card shadow">                    
                    <div class="row no-gutters">                        
                        <div class="col-md-4">                           
                            <img class="card-img" src="~/images/@Model.Image" alt="Card image cap">
                        </div>
                        <div class="col-md-8">                         
                            <div class="card-body">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Name" asp-for="@Model.Name" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Secret Identity" asp-for="@Model.SecretIdentity" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Can't edit superpowers'" asp-for="@Model.Superpower" />
                                </div>
                                <br />
                                <button class="btn btn-warning btn-block" type="submit">Update superhero</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
