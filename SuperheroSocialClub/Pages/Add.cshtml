@page
@model SuperheroSocialClub.Pages.AddModel
@{
}

@* Bara en placeholder *@
<h1>Here you can add your superhero</h1>

<form method="post" class="mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img class="card-img" src="~/images/@Model.Image" alt="Card image cap">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <div class="form-group mb-1">
                                <input type="text" class="form-control" placeholder="Name" asp-for="@Model.Name" />
                            </div>
                            <div class="form-group mb-1">
                                <input type="text" class="form-control" placeholder="Secret Identity" asp-for="@Model.SecretIdentity" />
                            </div>
                            <div class="form-group mb-1">
                                <input type="text" class="form-control" placeholder="Superpower" asp-for="@Model.Superpower" />
                            </div>
                            <ul>
                                @foreach (string superpower in Model.SuperpowersList)
                                {
                                    <li>@superpower</li>
                                }
                            </ul>

                            <input class="btn btn-danger" type="submit" value="Add superpower" asp-page-handler="AddSuperpower" />

                            <input class="btn btn-primary" type="submit" value="Add superhero" asp-page-handler="AddSuperhero" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>